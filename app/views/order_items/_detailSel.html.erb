<div class="container-fluid">
<div class="container-fluid">
  <div class="col-md-6 col-sm-6 col-xs-6">
    <a href="#">
    <%= image_tag(qiniu_image_url(@product.image_url, :sel), style: "width:100%;") %>
    </a>
  </div>
  <div class="col-md-6 col-sm-6 col-xs-6">
    <div class="sel-msg">
        <div id="product_name" class="alert alert-success key" role="alert"></div>
        <div id="product_price" class="alert alert-info value" role="alert"></div>
    </div>
  </div>
</div>

<!-- product type select -->
<div style="margin-top: 20px;">
  <p class="mylabel label-secondary">
    选择型号
  </p>

  <ul class="rtype">
    <% @skus.each do |sku| %>
      <li style="display: inline-block;">
        <input type="radio" data-labelauty=<%= sku.product_type%> name="radio" class="labelauty" style="display: none;" value=<%= sku.product_type %> >
      </li>
    <% end %>
  </ul>

  <script>
    $(document).ready(function(){
      $(":radio").labelauty();
    });
  </script>
</div>


<!-- product count -->
<div>
  <p class="mylabel label-secondary">选择数量</p>
  <div class="qnt-count" style="margin-left: 40px;">
    <a id="count_min" class="incr-btn" href="#">-</a>
    <input id="count_text_box" name="" type="text" value="1" class="form-control" />
    <a id="count_add" class="incr-btn" href="#">+</a>
  </div>

</div>

<!-- add to cart -->
<div>
  <button id="addtocart2" class="btn btn-primary btn-sm" style="float:right">
    <i class="fa fa-cart-plus" aria-hidden="true"></i>加入购物车
  </button>
  <br>
</div>

</div>
