<%= simple_form_for @product do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.check_box :active %>
  <%= f.text_area :description %>
  <%= f.input :image_url %>
  <%= f.input :thumb %>
  <%= f.input :pictures %>
  <%= f.association :stock_keeping_units %>
  <%= f.association :category %>
  <%= f.button :submit %>
<% end %>
