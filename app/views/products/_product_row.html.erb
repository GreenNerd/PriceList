<div class="well well-sm">

  <div class="row">
    <div style="position:relative; top:-20px; left:50px;">
      <h4><%= product.name %></small></h4>
      <td>
        <%= image_tag(product.image_url, class: 'list_image', size: "100x140") %>
      </td>
    </div>
    <div style="position:relative; top:-20px; left:50px;">
      <%= form_for order_item, remote: true do |f| %>
        <div display:inline>
          <h4 class="text-left">ï¿¥ <span style="color: green"><%= number_to_currency product.price %></span></h4>
        </div>
        <div class="input-group-btn" display:inline>
          <%= f.submit "Add to Cart", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

  </div>

</div>
