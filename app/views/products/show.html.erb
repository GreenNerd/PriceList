<div class="product">
  <div>
    <%= carousel_for(@product.pictures)%>
  </div>
  <div class="title">
    <p><%= @product.name %></p>
  </div>
  <div class="pricing">
    <div class="name col-xs-6">
      <div class="title">库存:</div>
      <div class="detail">
        <%= @mount %>
      </div>
    </div>
    <div class="name col-xs-6">
      <div class="title">价格:</div>
      <div class="detail">
        <%= number_to_currency @product.price %>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="pbutton">
      <%= link_to "加入购物车", new_order_item_path, remote: true, :class => 'pbutton add' %>
      <%= link_to "选择数量", new_order_item_path, remote: true, method: 'get', :class => 'pbutton sel' %>
    </div>
  </div>

  <!-- tabs -->
  <div>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">商品详情</a></li>
      <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">商品规格</a></li>
      <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">商品图片</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="home">
        <%= @product.description %>
      </div>
      <div role="tabpanel" class="tab-pane" id="profile">
        <% @skus.each do |sku| %>
          <h3><%= @product.name %>  <%= sku.product_type %></h3>
          <% sku.dimensions.each do |k, v| %>
            <p><%= k %>: <%= v %></p>
          <% end %>
        <% end %>
      </div>
      <div role="tabpanel" class="tab-pane" id="messages">
          <% @product.pictures.each do |img| %>
            <p><%= image_tag(img, size: "200x150") %></p>
          <% end %>
      </div>
    </div>

  <%= render 'dialog' %>
  </div> <!-- product/tabs -->

</div><!-- /product -->
