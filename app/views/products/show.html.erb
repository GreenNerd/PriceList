<%= carousel_for(qiniu_carousel(@product.pictures)) %>

<div class="d-title">
  <p><%= @product.name %></p>
</div>

<div class="d-pricing">
  <div class="col-xs-6">
    <div class="dl-title"><i class="fa fa-tag" aria-hidden="true"></i>库存</div>
    <div class="dl-detail"><%= @mount %></div>
  </div>
  <div class="name col-xs-6">
    <div class="dl-title"><i class="fa fa-tag" aria-hidden="true"></i>价格</div>
    <div class="dl-detail"><%= number_to_currency @product.price %></div>
  </div>
</div>

<div class="container-fluid">
  <div class="pbutton">
    <%= link_to "加入购物车", new_order_item_path, remote: true, :class => 'pbutton add' %>
    <%= link_to "选择数量", new_order_item_path, remote: true, method: 'get', :class => 'pbutton sel' %>
  </div>
</div>

<!-- Tabs Widget -->
<section class="tabs-widget">
  <!-- Nav Tabs -->
  <ul class="nav nav-tabs">
    <li><a href="#detail" data-toggle="tab" aria-expanded="true">商品详情</a></li>
    <li class="active"><a href="#dimens" data-toggle="tab" aria-expanded="false">商品规格</a></li>
    <li><a href="#pictur" data-toggle="tab">商品图片</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane fade" id="detail">
      <p class="p-style2">
        <%= @product.description %>
      </p>
    </div>
    <div class="tab-pane fade active in" id="dimens">
      <div class="container">
        <div class="row">
          <section class="tech-specs">
            <% @skus.each do |sku| %>
            <div class="row">
              <!-- Item -->
              <h4><span><%= @product.name %>  <%= sku.product_type %></span></h4>
              <% sku.dimensions.each do |k, v| %>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="item">
                  <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-3">
                      <i class="fa fa-info-circle" aria-hidden="true"></i>
                      <span><%= k %></span>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-9">
                      <p class="p-style2"><%= v %></p>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
            <% end %>
          </section>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="pictur">
      <% @product.pictures.each do |img| %>
        <p><%= image_tag(img, size: "461x484") %></p>
      <% end %>
    </div>

  </div> <!-- tabs content -->
</section>
