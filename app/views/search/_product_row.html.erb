<div class="well">

  <div class="row">
    <div class="col-md-8">
      <h4><%= product.name %></small></h4>
      <td>
        <%= image_tag(product.image_url, class: 'list_image', size: "100x140") %>
      </td>
      <h4 class="text-right">￥ <span style="color: green"><%= number_to_currency product.price %></span></h4>
    </div>
    <div class="col-md-4">
      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">￥ <span style="color: green"><%= number_to_currency product.price %></span></h4>
        <div class="input-group-btn">
          <%= f.submit "Add to Cart", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

  </div>

</div>
