<div class="col-md-2"></div>
<div class="col-md-8">
  <div class="panel panel-primary">
    <div class="panel-heading">分类管理</div>
    <div class="panel-body">
      <%= form_for @category, html: { class: "form-horizontal" } do |f| %>
        <div class="form-group">
          <label class="col-sm-2 control-label">上级分类</label>
          <div class="col-sm-10">
            <% if Category.all.present? %>
              <%= f.select :parent_id, nested_set_options(Category, @category) { |i| "#{'-' * i.level} #{i.name}"} %>
            <% else %>
              <span class="label label-info">暂无分类</span>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">分类内容</label>
          <div class="col-sm-10">
            <%= f.text_area :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <%= f.submit "保存", class: "btn btn-danger btn-sm", style: "float:right;" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-md-2"></div>
